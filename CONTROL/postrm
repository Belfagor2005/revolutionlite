echo
echo "*****************************************"
echo "*         Uninstall Revolution          *"
echo "*****************************************"
EXTDIR="/usr/lib/enigma2/python/Plugins/Extensions/revolution"

if [ -d "$EXTDIR" ]; then
   rm -rf "$EXTDIR" > /dev/null 2>&1
fi

echo "*****************************************"
echo "*          ....done                     *"
echo "*****************************************"
exit 0


